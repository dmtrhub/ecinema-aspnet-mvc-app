@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <th>@Html.DisplayNameFor(model => model.PictureUrl)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.PictureUrl" alt="@item.Name" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(itemModel => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(itemModel => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil_fill"></i>Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-info-square-fill"></i>Details</a> |
                            <a class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>