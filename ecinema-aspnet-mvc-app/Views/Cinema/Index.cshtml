@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <th>@Html.DisplayNameFor(model => model.PictureUrl)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.PictureUrl" alt="@item.Name" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(itemModel => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(itemModel => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-square"></i> Details</a> |
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="position: fixed; right: 30px; bottom: 30px" class="text-white">
            <a asp-controller="Cinema" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-circle-fill"></i> Create Cinema
            </a>
        </div>
    </div>
</div>